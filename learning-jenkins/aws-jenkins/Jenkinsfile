pipeline {
    agent any // Runs on any available Jenkins agent
    stages {
        stage('clone github repo') {
            steps {
               
                git branch: 'main', credentialsId: 'jenkins-github-credentials', url: 'https://github.com/shawnnyce1/jenkins_s3'
            }
        }
        stage('Create s3 bucket') {
            steps {
                withCredentials([gitUsernamePassword(credentialsId: 'jenkins-github-credentials', gitToolName: 'Default')]) {{
                    sh 'aws s3 mb s3://jenkins-aws-s3-bucket'
                    sleep 150
                }
            }
        }
        stage('Delete') {
            steps {
               withCredentials([gitUsernamePassword(credentialsId: 'jenkins-github-credentials', gitToolName: 'Default')]) { {
                    sh 'aws s3 rb s3://jenkins-aws-s3-bucket'
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}